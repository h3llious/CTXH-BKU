<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/logosw" />
    <!--Ho-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_below="@id/imageLogo"
        android:id="@+id/firstname"
        android:textSize="20sp"
        android:textColor="#FFFF00"
        android:text="Họ"
        android:enabled="true"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/edit_fname"
        android:layout_marginTop="10dp"
        android:hint="First name"
        android:layout_below="@id/firstname"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="#FFFFFF"
        />
    <!--Ten-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastname"
        android:layout_below="@id/edit_fname"
        android:layout_marginTop="20dp"
        android:text="Tên"
        android:textColor="#FFFF00"
        android:textSize="20sp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/edit_lname"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF"
        android:textSize="16sp"
        android:hint="Last name"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:inputType="textPersonName"
        android:layout_below="@id/lastname"/>
    <!--Email-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_below="@id/edit_lname"
        android:layout_marginTop="20dp"
        android:text="Email"
        android:textColor="#FFFF00"
        android:textSize="20sp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/edit_email"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF"
        android:textSize="16sp"
        android:hint="Email"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:inputType="textPersonName"
        android:layout_below="@id/email"/>
    <!--password-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pass_sn"
        android:layout_below="@id/edit_email"
        android:layout_marginTop="20dp"
        android:text="Mật khẩu:"
        android:textColor="#FFFF00"
        android:textSize="20sp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/edit_pass_sn"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF"
        android:textSize="16sp"
        android:hint="Password"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:layout_below="@id/pass_sn"/>
    <!--xac nhan pass-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/check_pass"
        android:layout_below="@id/edit_pass_sn"
        android:layout_marginTop="20dp"
        android:text="Xác nhận mật khẩu:"
        android:textColor="#FFFF00"
        android:textSize="20sp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/edit_checkpass"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF"
        android:textSize="16sp"
        android:hint="Password"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:layout_below="@id/check_pass"/>
    <!--nut bam-->
    <Button
        android:id="@+id/login_sn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Đăng nhập"
        android:layout_below = "@+id/edit_checkpass"
        android:layout_toLeftOf="@id/signout"
        android:background="#1E90FF"/>
        />
    <!--nut thoat-->
    <Button
        android:id="@+id/signout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:text="Thoát"
        android:layout_alignEnd="@id/edit_checkpass"
        android:layout_below = "@+id/edit_checkpass"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:background="#1E90FF"/>
</RelativeLayout>

